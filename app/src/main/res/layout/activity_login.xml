<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schen162.vmonopoly.DrivingActivity">

    <EditText
        android:id="@+id/txt_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textPersonName" />

    <Button
        android:id="@+id/btn_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:onClick="onLoginPressed"
        android:text="登陆"
        app:layout_constraintLeft_toRightOf="@+id/txt_username"
        tools:layout_editor_absoluteY="0dp" />

    <Button
        android:id="@+id/btn_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onDrivePressed"
        tools:layout_editor_absoluteX="29dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_m" />

    <TextView
        android:id="@+id/txt_m"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:textSize="30sp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/txt_username"
        app:layout_constraintLeft_toRightOf="@+id/textView2" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:text="当前福币："
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="@+id/txt_m"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/btn_Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:onClick="onMapPressed"
        android:text="停车买地"
        app:layout_constraintTop_toBottomOf="@+id/btn_drive"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/txt_http"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="32dp"
        android:layout_marginTop="24dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_Map" />

</android.support.constraint.ConstraintLayout>
