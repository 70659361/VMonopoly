<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schen162.vmonopoly.MainActivity">


    <TextView
        android:id="@+id/txt_curUser"
        android:layout_width="180dp"
        android:layout_height="40dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_curCoins"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginLeft="16dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/txt_curUser"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="16dp" />

    <TextView
        android:id="@+id/txt_curLocation"
        android:layout_width="395dp"
        android:layout_height="40dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="1"
        android:textSize="18sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_curCoins"
        tools:layout_editor_absoluteX="8dp" />

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="395dp"
        android:layout_height="320dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/txt_curLocation"
        tools:layout_editor_absoluteX="8dp">

    </com.amap.api.maps2d.MapView>

    <Button
        android:id="@+id/btn_dice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onDicePressed"
        android:text="DICE"
        app:layout_constraintTop_toBottomOf="@+id/map" />


    <ImageButton
        android:id="@+id/btn_walk"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="8dp"
        android:layout_weight="1"
        android:onClick="onWalkPressed"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:srcCompat="@drawable/amap_man" />

    <ImageButton
        android:id="@+id/btn_bike"
        android:layout_width="80dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginStart="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_walk"
        app:layout_constraintStart_toEndOf="@+id/btn_walk"
        app:srcCompat="@drawable/amap_ride" />

    <ImageButton
        android:id="@+id/btn_car"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/btn_bike"
        app:srcCompat="@drawable/amap_car" />

    <TextView
        android:id="@+id/txt_mileage"
        android:layout_width="wrap_content"
        android:layout_height="43dp"
        android:layout_marginBottom="8dp"
        android:layout_marginStart="8dp"
        android:text="TextView"
        android:textSize="30sp"
        app:layout_constraintBottom_toTopOf="@+id/btn_walk"
        app:layout_constraintStart_toStartOf="parent" />

</android.support.constraint.ConstraintLayout>
