<?xml version="1.0" encoding="utf-8"?>

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schen162.vmonopoly.MainActivity">


    <TextView
        android:id="@+id/txt_curLocation"
        android:layout_width="395dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        android:text="1"
        android:textSize="30sp"
        app:layout_constraintTop_toBottomOf="@+id/txt_CurCoins"
        tools:layout_editor_absoluteX="8dp" />

    <TextView
        android:id="@+id/txt_CurCoins"
        android:layout_width="395dp"
        android:layout_height="65dp"
        android:layout_marginTop="8dp"
        android:text="2"
        android:textSize="30sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="8dp" />

    <com.amap.api.maps2d.MapView
        android:id="@+id/map"
        android:layout_width="395dp"
        android:layout_height="380dp"
        android:layout_marginTop="8dp"
        android:layout_weight="1"
        app:layout_constraintTop_toBottomOf="@+id/txt_curLocation"
        tools:layout_editor_absoluteX="8dp">

    </com.amap.api.maps2d.MapView>

    <Button
        android:id="@+id/btn_search"
        android:layout_width="395dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:onClick="onSearchPressed"
        android:text="周边地产"
        tools:layout_editor_absoluteX="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/map" />

</android.support.constraint.ConstraintLayout>
