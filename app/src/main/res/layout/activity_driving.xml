<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.schen162.vmonopoly.DrivingActivity">

    <Button
        android:id="@+id/btn_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:onClick="onDrivePressed"
        android:text="Drive"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <TextView
        android:id="@+id/txt_m"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="8dp"
        android:textSize="30sp"
        app:layout_constraintLeft_toRightOf="@+id/btn_drive"
        app:layout_constraintTop_toTopOf="@+id/btn_drive" />

    <Button
        android:id="@+id/btn_Map"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onMapPressed"
        android:text="Map"
        tools:layout_editor_absoluteX="29dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@+id/btn_drive" />
</android.support.constraint.ConstraintLayout>
